{
    "name": "template-ios-project",
    "version": "1.0.0",
    "private": true,
    "description": "iOSネイティブプロジェクトのnpmスクリプト管理用パッケージファイル",
    "scripts": {
        "siml:list": "xcrun simctl list devices",
        "siml:boot:iphone15": "xcrun simctl boot 'iPhone 15'",
        "build:debug": "xcodebuild -project TemplateApp.xcodeproj -scheme TemplateApp -configuration Debug -sdk iphonesimulator -derivedDataPath ./build/debug",
        "install:simulator": "xcrun simctl install booted ./build/debug/Build/Products/Debug-iphonesimulator/TemplateApp.app",
        "launch:simulator": "xcrun simctl launch booted com.example.templateapp",
        "run:simulator": "npm run build:debug && npm run install:simulator && npm run launch:simulator",
        "test:unit": "xcodebuild test -project TemplateApp.xcodeproj -scheme TemplateApp -destination 'platform=iOS Simulator,name=iPhone 15' -derivedDataPath ./build/test-results",
        "clean": "xcodebuild clean -project TemplateApp.xcodeproj -scheme TemplateApp && rm -rf ./build/debug",
        "clean:all": "rm -rf ./build",
        "build:release": "xcodebuild -project TemplateApp.xcodeproj -scheme TemplateApp -configuration Release -sdk iphoneos -derivedDataPath ./build/release",
        "archive": "xcodebuild -project TemplateApp.xcodeproj -scheme TemplateApp -configuration Release -archivePath ./build/archives/TemplateApp.xcarchive -derivedDataPath ./build/archives -skipMacroValidation CODE_SIGNING_ALLOWED=NO archive"
    }
}