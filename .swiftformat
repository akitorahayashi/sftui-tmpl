#===================================================================
# Swift Format Rules
#===================================================================

#-------------------------------------------------------------------
# General Configuration
#-------------------------------------------------------------------
# Swift version
--swiftversion 5.9

# Directories to exclude (build artifacts, dependencies, etc.)
--exclude .build
--exclude DerivedData
--exclude fastlane
--exclude .git
--exclude build
--exclude xcbuild
--exclude **/*.generated.swift
--exclude **/build/**
--exclude **/*.xcodeproj

#-------------------------------------------------------------------
# Indentation & Spacing
#-------------------------------------------------------------------
# Indentation settings
--indent 4                       # Set indent width to 4 spaces
--indentcase true               # Indent case statements more than switch
--maxwidth 120                   # Maximum line width is 120 characters
--trimwhitespace always          # Remove whitespace at the beginning and end of lines
--commas always                  # Add space after commas
--linebreaks lf                  # Use LF (\n) for line breaks (do not use CRLF)

#-------------------------------------------------------------------
# Braces & Structure
#-------------------------------------------------------------------
# Brace style
--allman false                   # Swift standard brace style: place opening brace on the same line as the condition
                                 # Example: if (condition) {
                                 #        code
                                 #     }
                                 
--closingparen balanced          # Align closing parenthesis at the same level as the start position in multi-line function calls, etc.
                                 # Example: someFunction(
                                 #        parameter1: value1,
                                 #        parameter2: value2
                                 #     )  // Closing parenthesis at the same indent level as the call start

# Semicolons
--semicolons never               # Do not use semicolons

#-------------------------------------------------------------------
# Wrapping & Collections
#-------------------------------------------------------------------
# Wrapping long argument lists and collections
--wraparguments before-first     # When wrapping argument lists, wrap before the first argument (after the opening parenthesis)
                                 # Example: someFunction(  // Wrap after parenthesis
                                 #        arg1: value1,
                                 #        arg2: value2,
                                 #        arg3: value3
                                 #     )
                                 # Long argument lists are easily identifiable and separated from the function name for readability

--wrapcollections before-first   # When wrapping collection literals like arrays or dictionaries, wrap before the first element
                                 # Example: let array = [  // Wrap after bracket
                                 #        item1,
                                 #        item2,
                                 #        item3
                                 #     ]
                                 #
                                 # Each element is at the same indent level, visually organized and readable
#-------------------------------------------------------------------
# Imports & Modifiers
#-------------------------------------------------------------------
--importgrouping alphabetical      # Sort import statements alphabetically
--modifierorder acl                # Reorder modifiers in ACL order
--self insert                      # Explicitly insert self
--ranges spaced                    # Add spaces around range operators
--wrapconditions before-first      # Wrap multi-condition if/guard etc. before the first condition
